extends ./layout/index

block content
    h1(class="mt-5 text-center") #{page}
    main.container.mt-5 
        .row.upcomig-trips 
            each trip in trips 
                .col-md-6.col-lg-4.mb-4 
                    .card 
                        img.card-img-top(src=`img/destinos_${trip.imagen}.jpg`)
                        .card-body 
                            h2= trip.titulo 
                            p
                                svg(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-linecap='round' stroke-linejoin='round' width='24' height='24' stroke-width='2')
                                    path(d='M12.5 21h-6.5a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v5')
                                    path(d='M16 3v4')
                                    path(d='M8 3v4')
                                    path(d='M4 11h16')
                                    path(d='M19 19m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0')
                                    path(d='M17 21l4 -4')
                                | #{trip.fecha_ida} - #{trip.fecha_vuelta}
                            
                            p
                                svg(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-linecap='round' stroke-linejoin='round' width='24' height='24' stroke-width='2')
                                    path(d='M9 7m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0')
                                    path(d='M3 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2')
                                    path(d='M16 3.13a4 4 0 0 1 0 7.75')
                                    path(d='M21 21v-2a4 4 0 0 0 -3 -3.85')
                                | #{trip.disponibles} - Disponibles 
                            
                            p= trip.descripcion.substr(0, 100) + '...'

                            a(href=`trips/${trip.slug}`, class="btn btn-success btn-block") Más Información

            