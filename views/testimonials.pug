extends ./layout/index

block content
    main.container.mt-5 
        h1.text-center.mt-5 #{page}

        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
            include ./layout/testimonials_layout

        .row 

            .col-md-12
                h2.d-block.w-100.text-center Agrega un Testimonial 

                if(errors)
                    each error in errors 
                        .alert.col.alert-danger.text-center= error.message
                
            .row.justify-content-center.col 
                .col-md-8 
                    form(action="/testimonials" method="POST")
                        .form-group 
                            label(for="name") Nombre 
                            input#name(type="text", placeholder="Tu Nombre", name="name", class="form-control", value=name)
                        .form-group 
                            label(for="mail") Correo Electr√≥nico 
                            input#mail(type="text", placeholder="Tu Correo", name="mail", class="form-control", value=mail)
                        .form-group 
                            label(for="message") Mensaje 
                            textarea#message(class="form-control", name="message", placeholder="Tu Mesnaje", rows= 3)= message

                        input.btn.btn-success.btn-block(type="submit")